# Solana/Anchor development environment
# Usage: ./docker.sh start devnet
# Wallet is persisted at ~/.config/solana/id.json on your host

FROM rustlang/rust:nightly-bookworm

# Install system dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libudev-dev \
    libssl-dev \
    build-essential \
    llvm \
    libclang-dev \
    protobuf-compiler \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js (for Anchor/bun)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# Install bun
RUN curl -fsSL https://bun.sh/install | bash
ENV PATH="/root/.bun/bin:${PATH}"

# Install Solana CLI (v3.1.6 ships with rustc 1.82+)
RUN sh -c "$(curl -sSfL https://release.anza.xyz/v3.1.6/install)"
ENV PATH="/root/.local/share/solana/install/active_release/bin:${PATH}"

# Install Anchor CLI directly (matches project's anchor-lang 0.32.1)
RUN cargo install --git https://github.com/coral-xyz/anchor --tag v0.32.1 anchor-cli

# Set default to devnet
RUN solana config set --url devnet

# Verify installations
RUN solana --version && anchor --version && bun --version

WORKDIR /bridge

# Entrypoint handles wallet auto-generation
COPY docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]
CMD ["bash"]
